{
  "description": "Pipeline for parsing PostgreSQL logs.",
  "processors": [
    {
      "grok": {
        "field": "message",
        "ignore_missing": true,
          "patterns": [
              "^%{LOCALDATETIME:postgresql.log.timestamp} %{WORD:postgresql.log.timezone},(\"%{USERNAME:postgresql.log.user}\")?,(\"%{POSTGRESQL_DB_NAME:postgresql.log.database}\")?,(%{NUMBER:postgresql.log.process_id})?,(\"%{HOSTPORT:postgresql.log.connection_from}\"|\"\\[%{HOSTNAME:postgresql.log.connection_from}\\]\")?,(%{NOT_COMMA:postgresql.log.session_id})?,(%{NUMBER:postgresql.log.session_line_num})?,(\"%{NOT_QUOTE:postgresql.log.command_tag}\")?,(%{LOCALDATETIME:postgresql.log.session_start_time_timestamp} %{NOT_COMMA:postgresql.log.session_start_time_timezone})?,(%{NOT_COMMA:postgresql.log.virtual_transaction_id})?,(%{NUMBER:postgresql.log.transaction_id})?,(%{NOT_COMMA:postgresql.log.error_severity})?,(%{NUMBER:postgresql.log.sql_state_code})?,(\"%{NOT_QUOTE:postgresql.log.message}\")?,(\"%{NOT_QUOTE:postgresql.log.detail}\")?,(\"%{NOT_QUOTE:postgresql.log.hint}\")?,(\"%{NOT_QUOTE:postgresql.log.internal_query}\")?,(%{NUMBER:postgresql.log.internal_query_pos})?,(\"%{NOT_QUOTE:postgresql.log.context}\")?,(\"%{NOT_QUOTE:postgresql.log.query}\")?,(%{NUMBER:postgresql.log.query_pos})?,(\"%{NOT_QUOTE:postgresql.log.location}\")?,(%{\"NOT_QUOTE:postgresql.log.application_name}\")?"
          ],
          "pattern_definitions": {
            "LOCALDATETIME": "[-0-9]+ %{TIME}",
            "GREEDYDATA": "(.|\n|\t)*",
            "POSTGRESQL_DB_NAME": "[a-zA-Z0-9_]+[a-zA-Z0-9_\\$]*",
            "NOT_COMMA": "[^,]+",
            "NOT_QUOTE": "([^\"]|\"\")+"
          }
      }
    },
    {
      "date": {
        "field": "postgresql.log.timestamp",
        "target_field": "@timestamp",
        "formats": [
          "yyyy-MM-dd HH:mm:ss.SSS"
        ],
        "timezone": "{{postgresql.log.timezone}}",
        "ignore_failure": true
      }
    }
  ],
  "on_failure": [
    {
      "set": {
        "field": "error.message",
        "value": "{{ _ingest.on_failure_message }}"
      }
    }
  ]
}
