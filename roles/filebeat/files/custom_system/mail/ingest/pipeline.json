{
    "description": "Pipeline for parsing mail messages.",
    "processors": [
        {
            "grok": {
                "field": "message",
                "patterns": [
                    "%{SYSLOGTIMESTAMP:system.mail.timestamp} %{SYSLOGHOST:system.mail.hostname} (?:<%{WORD:system.mail.facility}.%{WORD:system.mail.priority}> )?%{WORD:system.mail.program}(?:\/%{WORD:system.mail.subprogram})?(?:\\[%{POSINT:system.mail.pid}\\])?:%{GREEDYMULTILINE:system.mail.message}",
                    "%{SYSLOGTIMESTAMP:system.mail.timestamp} %{GREEDYMULTILINE:system.mail.message}"
                ],
                "pattern_definitions" : {
                    "GREEDYMULTILINE" : "(.|\n)*"
                },
                "ignore_missing": true
            }
        },
        {
            "date": {
                "field": "system.mail.timestamp",
                "target_field": "@timestamp",
                "formats": [
                    "MMM  d HH:mm:ss",
                    "MMM dd HH:mm:ss"
                ],
                {< if .convert_timezone >}"timezone": "{{ beat.timezone }}",{< end >}
                "ignore_failure": true
            }
        }
    ],
    "on_failure" : [{
        "set" : {
            "field" : "error.message",
            "value" : "{{ _ingest.on_failure_message }}"
        }
    }]
}
